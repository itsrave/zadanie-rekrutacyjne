        <a class="navbar-brand" href="#">Go Rest Browser</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ url('home_page') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="{{ url('users') }}">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="{{ url('posts') }}">Posts</a>
                </li>
